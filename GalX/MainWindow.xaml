<Window x:Class="GalX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GalX"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#FFCF2626" />
                <GradientStop Color="White" Offset="1" />
            </RadialGradientBrush>
        </Grid.Background>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="86" Width="194" Click="button_Click" />
        <RadioButton x:Name="radioButton" Content="RadioButton" HorizontalAlignment="Left" Margin="421,254,0,0" VerticalAlignment="Top" />
    </Grid>
</Window>